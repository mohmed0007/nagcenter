<odoo>
  <data>
    <record id="view_hospital_hms_treatment_short_wayform" model="ir.ui.view">
        <field name="name">hms.treatment.form.short.way</field>
        <field name="model">hms.treatment</field>
        <field name="inherit_id" ref="acs_hms.view_hospital_hms_treatment_form"/>
        <field name="arch" type="xml">
            <field name="attending_physician_ids" position="after">
                <field name="mobile_treatment" />
            </field>
           
        </field>
    </record>


    <record id="view_hospital_hms_prescription_inherit" model="ir.ui.view">
        <field name="name">prescription.order.form.short.way</field>
        <field name="model">prescription.order</field>
        <field name="inherit_id" ref="acs_hms.view_hms_prescription_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='amount_tax']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <!-- <xpath expr="//field[@name='amount_tax']" position="after">
                        <field name="tax_totals_json" widget="account-tax-totals-field" nolabel="1" colspan="2"/>
                </xpath> -->
           
        </field>
    </record>

     <record id="view_hospital_hms_treatment_short_way_search" model="ir.ui.view">
        <field name="name">hms.treatment.search.short.way</field>
        <field name="model">hms.treatment</field>
        <field name="inherit_id" ref="acs_hms.view_hms_treatment_search"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="name" filter_domain="['|',('name','ilike',self),('mobile_treatment','ilike',self)]"/>
            </field>
           
        </field>
    </record>



    <record id="view_hospital_hms_appioment_short_way_form" model="ir.ui.view">
        <field name="name">hms.appointment.form.short.way</field>
        <field name="model">hms.appointment</field>
        <field name="inherit_id" ref="acs_hms.view_hms_appointment_form"/>
        <field name="arch" type="xml">
            <field name="appointment_duration_timer" position="after">  
                <field name="mobile_appointment" attrs="{'readonly': ['|','|',('state','=','waiting'),('state','=','in_consultation'),('state','=','vitality')]}"/>
            </field>
           
        </field>
    </record>


     <record id="view_hospital_hms_appointment_short_way_search" model="ir.ui.view">
        <field name="name">hms.appointment.search.short.way</field>
        <field name="model">hms.appointment</field>
        <field name="inherit_id" ref="acs_hms.view_hms_appointment_search"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                 <field name="name" filter_domain="['|',('name','ilike',self),('mobile_appointment','ilike',self)]" />
            </field>
           
        </field>
    </record>


    
   
    
    <!-- primary|extension Inherited .:Tree:. view for "model" -->
    <record id="view_product_product_tree_inherited" model="ir.ui.view">
        <field name="name">view.product.product.model.tree inherited</field>
        <field name="model">product.product</field>
        <!-- Please veryfiy, that the following inherited view really sticks to the naming convention. -->
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes"> 
               <attribute name="editable">top </attribute>
                <!-- <attribute name="options">{'editable': 'bottom'}</attribute> -->
            </xpath>
            
            <xpath expr="//field[@name='product_template_variant_value_ids']" position="after">
                <!-- <attribute name="options">{'optional':show}</attribute> -->
                 <field name="fix_price"/>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="attributes">
                <!-- <attribute name="options">{'optional':show}</attribute> -->
                 <attribute name="optional">show</attribute>
            </xpath>
            
            <xpath expr="//field[@name='barcode']" position="attributes">
                 <!-- <attribute name="options">{'readonly':0}</attribute> -->
                 <attribute name="readonly">0</attribute>
            </xpath>

            <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                    <attribute name="options">{'digits': [15,3]}</attribute>
            </xpath> -->
            
            
        </field>
    </record>
    
   
  
    




    
  </data>
</odoo>
        <!--       Enhance  of Allocation  !-->
        <record id="accounting_configuration_form" model="ir.ui.view">
            <field name="name">hr.allocation.accounting.configuration.form</field>
            <field name="model">hr.allocation.accounting.configuration</field>
            <field name="arch" type="xml">
                <form string="Allocation Account">
                    <sheet>
                        <!--                        <field name="active" invisible="1"/>-->
                        <!--                        <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>-->
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1" placeholder="e.g. Configuration For X. Company"/>
                            </h1>
                                                        <label for="company_id" class="oe_edit_only"/>
                                                        <h6>
                                                            <field name="company_id" style="width:45%"/>
                                                        </h6>
                        </div>

                        <notebook>

                            <page name="accounting" string="Accounting">
                                <group>
                                    <group >
                                        <field name="leave_allocation_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="ticket_allocation_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="end_service_allocation_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="gosi_allocation_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="journal_id" domain="[('company_id','=',company_id)]"/>
                                    </group>
                                    <group >
                                        <field name="leave_expenses_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="ticket_expenses_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="end_service_expenses_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="gosi_expenses_acc_id" domain="[('company_id','=', company_id)]"/>
                                        <field name="loan_Payment_account" domain="[('company_id','=', company_id)]"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                    </sheet>

                </form>
            </field>
        </record>

        <record id="hr_allocation_accounting_configuration_tree" model="ir.ui.view">
            <field name="name">hr.allocation.accounting.configuration.tree</field>
            <field name="model">hr.allocation.accounting.configuration</field>
            <field name="arch" type="xml">
                <tree string="Allocation Accounting">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>



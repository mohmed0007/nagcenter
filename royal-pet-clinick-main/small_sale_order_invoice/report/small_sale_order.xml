<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="check_paperFormat_custom" model="report.paperformat">
            <field name="name">invoice small Format</field>
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="page_height">190</field>
            <field name="page_width">75</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">0</field>
            <field name="header_spacing">0</field>
            <field name="header_line" eval="False"/>
        </record>

        <record id="action_small_sale_report" model="ir.actions.report">
            <field name="name">small invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">small_sale_order_invoice.order_sale_small</field>
            <field name="report_file">small_sale_order_invoice.order_sale_small</field> 
              
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="small_sale_order_invoice.check_paperFormat_custom"/>   
        </record>


       

       
    </data>
</odoo>


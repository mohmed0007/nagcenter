<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inh" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <!-- <field name="priority" eval="40"/> -->
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='default_accounts']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div>
                                    <span class="o_form_label">Letter Of Guarantee Default Account:</span>
                                </div>
                                <div class="row mt8">
                                    <label for="lq_account_exp_id" class="col-lg-4 o_light_label"/>
                                    <field name="lq_account_exp_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="lq_account_accr_exp_id" class="col-lg-4 o_light_label"/>
                                    <field name="lq_account_accr_exp_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="lq_journal_id" class="col-lg-4 o_light_label"/>
                                    <field name="lq_journal_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="lq_account_analytic_id" class="col-lg-4 o_light_label"/>
                                    <field name="lq_account_analytic_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

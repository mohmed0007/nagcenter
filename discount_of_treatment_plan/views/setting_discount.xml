<?xml version="1.0"?>
<odoo>
    <data>
        <record id="res_config_settings_view_treatment_form_discount_plan" model="ir.ui.view">
            <field name="name">res.config.settings.treatment.view.form.inherit.discount</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="10"/>
            <field name="inherit_id" ref="acs_hms.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='prescription_res_config']" position="after">  
                    <h2>Discount Setting</h2>
                    <div class="row mt16 o_settings_container" id="global_commission_settings_treatment">  
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="tax_treatment_plan"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="tax_treatment_plan" class="o_light_label" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>   
                    </div>          
                </xpath>
            </field>
        </record>
    </data>
</odoo>
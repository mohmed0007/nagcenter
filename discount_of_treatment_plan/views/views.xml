<odoo>
  <data>
   
        
        <record id="view_order_invoice_treatment_discount_form" model="ir.ui.view">
             <field name="name">sale.order.invoice.treatment.discount.form.view</field>
             <field name="model">prescription.order</field>
             <field name="inherit_id" ref="acs_hms.view_hms_prescription_order_form" />
             <field name="arch" type="xml">
                <field name="pregnancy_warning" position="after">
                    <field name="discount_type" widget="radio"/>
                </field>

                <xpath expr="//group[@name='sale_total']" position="after">
                    <group>
                        <label for="discount_method" attrs="{'invisible': ['|',('discount_type','=','line'),('discount_type','=','non_discount')]}"/>
                        <div>
                            <field name="discount_method" class="oe_inline" attrs="{'invisible': ['|',('discount_type','=','line'),('discount_type','=','non_discount')]}"/>
                        </div>
                         <label for="discount_amount" attrs="{'invisible': ['|',('discount_type','=','line'),('discount_type','=','non_discount')]}"/>
                        <div>
                            <field name="discount_amount" class="oe_inline" attrs="{'invisible': ['|',('discount_type','=','line'),('discount_type','=','non_discount')]}"/>
                            <label for="discount_amount" string="%%" attrs="{'invisible': [('discount_method', '!=', 'per')]}" class="oe_inline"/>
                         </div>
                    </group>
                </xpath>

                <xpath expr="//tree/field[@name='dose']" position="before">
                    <field name="discount_type" invisible="1"/>
                    <field name="discount_method" attrs="{'column_invisible': ['|',('parent.discount_type', '=', 'global'),('parent.discount_type', '=', 'non_discount')],'invisible': ['|',('discount_type','=','global'),('discount_type','=','non_discount')]}"/>
                    <field name="discount_amount" attrs="{'column_invisible': ['|',('parent.discount_type', '=', 'global'),('parent.discount_type', '=', 'non_discount')],'invisible': ['|',('discount_type','=','global'),('discount_type','=','non_discount')]}"/>
                    <field name="discount_amt" invisible="1"/>
                    
                </xpath>

                 <xpath expr="//group[@name='sale_total']" position="after">
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total_discount">
                        <field name="discount_amt" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['|',('discount_type','=','line'),('discount_type','=','non_discount')]}" colspan="2"/>
                        <field name="discount_amt_line" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['|',('discount_type','=','global'),('discount_type','=','non_discount')]}" colspan="2"/>
                        <!-- <field name="tax_totals_json" widget="account-tax-totals-field" nolabel="1" colspan="2"/> -->
                    </group>
                </xpath>


                <xpath expr="//tree/field[@name='discount']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

           

             </field>
        </record>
  </data>
</odoo>
<odoo>
  <data>
         <record id="view_invoice_line_tree" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree string="Invoices Line"
                      js_class="account_tree"
                      sample="1">
                    <field name="ref" decoration-bf="1"/>
                    <field name="date"  string=" Date"/>
                    <field name="account_id"  optional="show" />
                    <field name="cate" />
                    <field name="product_id" />
                     <field name="partner_id" />
                    <!-- <field name="quantity" />
                    <field name="price_unit" />
                    <field name="untaxed_total" /> -->
                    <field name="move_type"  invisible="1"/>
                    <field name="user_id" />
                    <!-- <field name="location_id" /> -->
                    <field name="quantity" />
                    <field name="price_unit" />
                    <field name="total_wd" />
                    <field name="Discount" />
                    <field name="untaxed_total" sum="Untaxed Amount Total"/>
                    <field name="tax_amount" string="tax" sum="Tax Total"/>
                    <field name="taxed_total" string="Amount Total" sum="Amount Total"/>
                  </tree>
            </field>
        </record>

         <record id="view_account_move_line_filter_custom" model="ir.ui.view">
            <field name="name">account.move.line.search</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <search string="Search Line ">
                    <field name="name" string="Journal Item" filter_domain="[
                        '|', '|', '|',
                        ('name', 'ilike', self), ('ref', 'ilike', self), ('account_id', 'ilike', self), ('partner_id', 'ilike', self)]"/>
                    <field name="date"/>
                    <field name="account_id"/>
                    <field name="account_root_id"/>
                    <field name="account_internal_type"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="move_id" string="Journal Entry" filter_domain="[
                        '|', '|', ('move_id.name', 'ilike', self), ('move_id.ref', 'ilike', self), ('move_id.partner_id', 'ilike', self)]"/>
                    <field name="tax_ids" />
                    <field name="tax_line_id" string="Originator Tax"/>
                    <field name="reconcile_model_id"/>
                    <separator/>
                    <filter string="Unposted" name="unposted" domain="[('journal_id.type', '=', 'sale')]" help="Unposted Journal Items"/>
                    <filter string="Posted" name="posted" domain="[('parent_state', '=', 'posted')]" help="Posted Journal Items"/>
                    
                    <separator/>
                    <filter string="Sales" name="sales" domain="[('journal_id.type', '=', 'sale')]" context="{'default_journal_type': 'sale'}"/>
                    <filter string="Credit Notes" name="credit" domain="[('move_id.move_type', '=', 'out_refund')]"/>
                    <separator/>
                    <filter string="Date" name="date" date="date"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Account" name="group_by_account" domain="[]" context="{'group_by': 'account_id'}"/>
                        <filter string="Partner" name="group_by_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Journal" name="journal" domain="[]" context="{'group_by': 'journal_id'}"/>
                        <filter string="Date" name="groupby_date" domain="[]" context="{'group_by': 'date'}"/>
                        <filter string="User" name="User" domain="[]" context="{'group_by': 'user'}"/>

                    </group>
                </search>
            </field>
        </record>

        <record id="purcahse_action1" model="ir.actions.act_window">
            <field name="name">Invoice Report</field>
            <field name="context">{ 'search_default_posted':1,  'search_default_sales':1}</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="search_view_id" ref="view_account_move_line_filter_custom"/>
            <field name="view_mode">tree</field>
            <field name="domain">[('move_type','=','out_invoice'),('product_id','!=',False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('invoice_report.view_invoice_line_tree')})]"/>
        </record>

        <menuitem id="menu_account_move_line" name="Invoice Report" action="purcahse_action1" sequence="133" parent="account.menu_finance_receivables"/>


  
  </data>
</odoo>
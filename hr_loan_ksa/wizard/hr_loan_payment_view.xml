<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_loan_payment_form" model="ir.ui.view">
            <field name="name">hr.loan.payment.form</field>
            <field name="model">hr.loan.payment</field>
            <field name="arch" type="xml">
                <form string="Register Loan Payment">
                    <sheet>
                        <group>
                            <field name="loan_id" readonly="1"/>
                            <group>
                                <label for="amount"/>
                                <div name="amount_div" class="o_row">
                                    <field name="amount"/>
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}"
                                           groups="base.group_multi_currency" invisible="1"/>
                                </div>
                                <field name="journal_id" widget="selection"
                                       attrs="{'invisible': [('amount', '=', 0)]}"/>

                            </group>
                            <group>
                                <field name="payment_date"/>
                                <field name="config_id"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Validate' name="action_validate_loan_payment" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_loan_payment" model="ir.actions.act_window">
            <field name="name">Register Payroll Payment</field>
            <field name="res_model">hr.loan.payment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hr_loan_payment_form"/>
            <field name="context">{'default_loan_id': active_id}</field>
            <field name="target">new</field>
        </record>


         <record id="view_hr_loan_reschedule_form" model="ir.ui.view">
            <field name="name">hr.loan.reschedule.form</field>
            <field name="model">hr.loan.reschedule</field>
            <field name="arch" type="xml">
                <form string="Loan Reschedule">
                    <sheet>
                        <group>
                            <field name="loan_id" readonly="1"/>
                            <group>
                                <label for="amount"/>
                                <div name="amount_div" class="o_row">
                                    <field name="amount"/>
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}"
                                           groups="base.group_multi_currency" invisible="1"/>
                                </div>


                            </group>
                            <group>
                                <field name="date"/>
                                <field name="installment"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Validate' name="action_validate_loan_payment1" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_loan_reschedule" model="ir.actions.act_window">
            <field name="name">Loan Reschedule</field>
            <field name="res_model">hr.loan.reschedule</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hr_loan_reschedule_form"/>
            <field name="context">{'default_loan_id': active_id}</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
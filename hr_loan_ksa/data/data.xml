<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="hr_rule_input_loan" model="hr.payslip.input.type">
            <field name="code">LR</field>
            <field name="name">Loan</field>
        </record>

        <record id="hr_rule_loan" model="hr.salary.rule">
            <field name="code">LR</field>
            <field name="name">Loan</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">python</field>
            <field name="amount_select">code</field>
            <field name="condition_python">result = (inputs.LR and inputs.LR.amount > 0)</field>
            <field name="amount_python_compute">result = -(inputs.LR.amount) </field>
            <field name="sequence" eval="120"/>
            <field name="struct_id" ref="hr_payroll_ksa.hr_payroll_structure_custom"/>
        </record>

        <record id="ir_seq_hr_loan" model="ir.sequence">
			<field name="name">Loan Request</field>
			<field name="code">hr.loan.seq</field>
			<field name="prefix">LR/</field>
			<field name="padding">4</field>
			<field name="number_increment">1</field>
			<field name="number_next_actual">1</field>
			<field name="implementation">standard</field>
		</record>

    </data>
</odoo>

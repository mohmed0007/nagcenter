<?xml version="1.0"?>
<odoo>
    <record id="other_rules_form1" model="ir.ui.view">
        <field name="name">Other Rules</field>
        <field name="model">other.rules</field>
        <field name="arch" type="xml">
            <form string="Other Rules">
                <header>
                    <button name="other_hr_payslip_done" string="Done" states="draft" type="object" class="oe_highlight"
                            groups="hr_payroll.group_hr_payroll_user"/>
                    <button name="set_draft" string="Set as Draft" states="done" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly':[('state','!=', 'draft')]}"
                                   placeholder="Select Employee"/>
                            <field name="department_id" placeholder="Select Department" force_save="1"/>
                            <field name="company_id"  groups="base.group_multi_company" options="{'no_create': True}"
                                   attrs="{'readonly':[('state','!=', 'draft')]}" force_save="1"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                            <field name="operation_type" attrs="{'readonly':[('state','!=', 'draft')]}" widget="radio"/>
                            <field name="amount" attrs="{'readonly':[('state','!=', 'draft')]}" required="1"/>
                        </group>
                    </group>
                    <group  colspan="4">
                        <field name="description" placeholdar="Request Description" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="other_rules_tree" model="ir.ui.view">
        <field name="name">Other.Rules</field>
        <field name="model">other.rules</field>
        <field name="arch" type="xml">
            <tree string="Other Allowances/Deduction">
                <field name="employee_id"/>
                <field name="operation_type"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_other_rules_filter" model="ir.ui.view">
        <field name="name">other.rules.filter</field>
        <field name="model">other.rules</field>
        <field name="arch" type="xml">
            <search string="Search Other Allowances/Deduction">
                <field name="employee_id"/>
                <separator/>
                <filter name="filter_approve" domain="[('state','=','draft')]" string="To Approve"/>
                <filter name="filter_done" domain="[('state','=','done')]" string="Done"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter name="group_name" string="Employee" context="{'group_by':'employee_id'}"/>
                    <filter name="group_request" string="Type" icon="terp-personal" context="{'group_by':'operation_type'}"/>
                    <filter name="group_department" string="Department" icon="terp-personal+" context="{'group_by':'department_id','set_visible':True}"/>
                    <filter name="group_status" string="Status" icon="terp-stock_effects-object-colorize" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payroll_other_rules" model="ir.actions.act_window">
        <field name="name">Other Allowances/Deduction</field>
        <field name="res_model">other.rules</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_hr_payslip_other_rules"
        action="action_payroll_other_rules"
        name="Other Allowances/Deductions"
        sequence="85"
        parent="hr_payroll.menu_hr_payroll_payslips"/>


</odoo>
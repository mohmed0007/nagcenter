<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_form_inherit_view" model="ir.ui.view">
        <field name="name">hr.payslip.inherit.form1</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="open_loan" type="object" icon="fa-dollar"
                        attrs="{'invisible': [('installment_count', '=', 0)]}">
                    <field string="Loan" name="installment_count" widget="statinfo"/>
                </button>
            </div>
            <field name="input_line_ids" position="after">
                <field name="loan_line_ids" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="payslip_summary_reports_print_view" model="ir.ui.view">
            <field name="name">payslip.summary.reports.form</field>
            <field name="model">payroll.summary.report</field>
            <field name="arch" type="xml">
                <form string="Payslip Summary Report">
                    <group attrs="{'invisible': [('excel_file', '!=', False)]}">
                        <h2>
                            Are you sure you want to Generate Payslip Summary Report?
                        </h2>
                    </group>
                    <group>
                        <field name="file_name" attrs="{'invisible': [('excel_file', '!=', False)]}" required="1"/>
                        <field name="status" widget="radio"/>
                        <field name="batch_ids" required="1"/>
                    </group>
                    <group attrs="{'invisible': [('excel_file', '=', False)]}">
                        <field name="excel_file" filename="filename" readonly="1"/>
                        <field name="filename" invisible="1"/>
                    </group>

                    <footer>
                        <button name="print_reports" string="Print" type="object" class="oe_highlight"
                                attrs="{'invisible': [('excel_file', '!=', False)]}"/>
                        <button class="oe_link" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_payslip_summary_report_view1" model="ir.actions.act_window">
            <field name="name">Payslip Summary Reports</field>
            <field name="res_model">payroll.summary.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!-- <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/> -->
        </record>

        <menuitem
            id="menu_hr_payroll_summary_report"
            action="action_payslip_summary_report_view1"
            name="Payroll Summary Report"
            sequence="86"
            parent="hr_payroll.menu_hr_payroll_payslips"
    />

    </data>
</odoo>
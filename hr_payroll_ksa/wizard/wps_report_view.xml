<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="wps_reports_print_view" model="ir.ui.view">
        <field name="name">wps.reports.form</field>
        <field name="model">wps.report</field>
        <field name="arch" type="xml">
            <form string="WPS Report">
                <group attrs="{'invisible': [('excel_file', '!=', False)]}">
                <h2>
                    Are you sure you want to Generate WPS Report?
                </h2>
                </group>
                <group>
                    <field name="payment_details"/>
                    <field name="file_path"/>
                    <field name="value_date"/>
                </group>
                <group attrs="{'invisible': [('excel_file', '=', False)]}">
                    <field name="excel_file" filename="filename" readonly="1"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="print_reports" string="Print" type="object" class="oe_highlight" attrs="{'invisible': [('excel_file', '!=', False)]}"/>
                    <button class="oe_link" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wps_report_view1" model="ir.actions.act_window">
        <field name="name">WPS Reports</field>
        <field name="res_model">wps.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
    </record>

 </odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ywt_purchase_order_automation_tree_view" model="ir.ui.view">
            <field name="name">ywt.purchase.order.automation.tree.view</field>
            <field name="model">ywt.purchase.order.automation</field>
            <field eval="16" name="priority"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="is_confirm_purchase_order"/>
                    <field name="is_create_vendor_bill" />
                    <field name="is_post_vendor_bill"/>
                    <field name="is_paid_vendor_bill"/>

                </tree>
            </field>
        </record>
        
         <record id="ywt_purchase_order_automation_form_view" model="ir.ui.view">
            <field name="name">ywt.purchase.order.automation.form.view</field>
            <field name="model">ywt.purchase.order.automation</field>
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
             	<form>
					<sheet>
						<group>
		                    <group>	
		                    	<field name="name" required="1"/>
		                    </group>
		                     <group>
                                
                                <field name="is_true_default"/>
								<field name="journal_id" attrs="{'invisible':[('is_paid_vendor_bill','=',False)] , 'required':[('is_paid_vendor_bill','=',True)]}" />
								<field name="outbound_payment_method_id" attrs="{'invisible':[('is_paid_vendor_bill','=',False)] , 'required':[('is_paid_vendor_bill','=',True)]}" />
		                   		<field name="purchase_journal_id"/>
		                   	
		                    </group> 
						</group>
	                    <group>
	                    	<group>
	                    		<field name="is_confirm_purchase_order" widget="boolean_toggle"/>
	                    		<field name="is_validate_incoming_shipment" attrs="{'invisible':[('is_confirm_purchase_order','=',False)]}" widget="boolean_toggle"/>
	                    		<field name="is_create_vendor_bill"  attrs="{'invisible':[('is_confirm_purchase_order','=',False)]}" widget="boolean_toggle"/>
	                    			
	                    	</group>
	                    	<group>
	                    		<field name="is_post_vendor_bill" attrs="{'invisible':[('is_create_vendor_bill','=',False)]}" widget="boolean_toggle"/>							
	                    		<field name="is_paid_vendor_bill" attrs="{'invisible':[('is_create_vendor_bill','=',False)]}" widget="boolean_toggle"/>
	                    		<field name="is_order_date_same_bill_date" attrs="{'invisible':[('is_create_vendor_bill','=',False)]}" widget="boolean_toggle"/>
	                    	</group>    
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        
        <record id="ywt_purchase_order_automation_action" model="ir.actions.act_window">
            <field name="name">Purchase Order Automation</field>
            <field name="res_model">ywt.purchase.order.automation</field>
            <field name="view_mode">tree,form</field>
             <field name="view_id" ref="ywt_purchase_order_automation_tree_view"/>
        </record>
        
        <menuitem id="ywt_purchase_order_automation_main_menu" name="Purchase Order Automation"  parent="purchase.menu_purchase_config" sequence="100"/>
        <menuitem id="ywt_purchase_order_automation_child_menu" name="Purchase Order Automation Configuration" action="ywt_purchase_order_automation_action"  parent="ywt_purchase_order_automation_main_menu" sequence="1"/>
        
    </data>
    
</odoo>
<odoo>
    <record id="loan_report_view" model="ir.ui.view">
        <field name="name">Loan Report Wizard</field>
        <field name="model">loan.report.wizard</field>
        <field name="arch" type="xml">
             <form>
                <sheet>
                        <group>

                            <group>
                                <field name="date_from"/>
                                <field name="company" />
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="department_id" />
                                <field name="emp_rel" />
                            </group>
                        </group>
                    </sheet>

            <footer>
	                <button name="get_report1" string="Print" type="object" default_focus="1" class="oe_highlight" />
	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
            </form>
        </field>
    </record>


    <record id="action_loan_report_wizard" model="ir.actions.act_window">
        <field name="name">Loan Report</field>
        <field name="res_model">loan.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="loan_report_view"/>
        <field name="target">new</field>
    </record>


    <menuitem id="loan_report_report" name="Loan Report" action="action_loan_report_wizard"
              parent="hr.hr_menu_hr_reports" sequence="10"/>


</odoo>
<odoo>
    <report id="hr_report_emp_details_19"
            model="employee.report.details"
            string="Employee Report Details"
            report_type="qweb-html"
            name="hr_report_ksa.template_hr_report_emp_details_19"
            menu="False"/>

    <template id="template_hr_report_emp_details_19">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" t-foreach="emps_info" t-as="emp_info">
                    <div>
                        <span>
                            <h6 class="text-center">
                                <h6 class="text-center">
                                    <span class="container mr-5 p-2 border border-secondary">
                                        Employee Information Details
                                    </span>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <span class="text-center container mr-5 p-2 border border-secondary">
                                        Employee Number:
                                        <span class="ml-2" t-esc="emp_info.registration_number"/>
                                    </span>
                                </h6>
                            </h6>
                        </span>
                    </div>

                    <div class="d-inline p-2 bg-secondary text-white  mb-3">Basic Information
                        <span class="mr-5"/>
                    </div>
                    <br/>
                    <br/>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Employee</th>
                                    <th scope="col">File Number</th>
                                    <th scope="col">Nationality</th>
<!--                                    <th scope="col">Religion</th>-->
                                    <th scope="col">Birthdate</th>
                                    <th scope="col">Place of Birth</th>
                                    <th scope="col">Martial Status</th>
                                    <th scope="col"># children's</th>
                                    <th scope="col">Experience</th>
<!--                                    <th scope="col"># Dependents</th>-->
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td scope="row" t-esc="emp_info.name"/>
                                    <td scope="row" t-esc="emp_info.registration_number"/>
                                    <td scope="row" t-esc="emp_info.country_id.name"/>
<!--                                    <th scope="row" t-esc="emp_info.country_id.name"/>-->
                                    <td scope="row" t-esc="emp_info.birthday"/>
                                    <td scope="row" t-esc="emp_info.place_of_birth"/>
                                    <td scope="row" t-esc="emp_info.marital"/>
                                    <td scope="row" t-esc="emp_info.children"/>
                                    <td scope="row" t-esc="emp_info.certificate"/>
<!--                                    <td scope="row" t-esc="len(emp_info.fam_ids)"/>-->
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-inline p-2 bg-secondary text-white mb-3">Qualifications
                        <span class="mr-5"/>
                    </div>
                    <br/>
                    <br/>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td scope="col">Certificate</td>
                                    <td scope="col">Study Field</td>
                                    <td scope="col">Place</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td scope="row" t-esc="emp_info.certificate" t-if="emp_info.certificate"/>
                                    <td scope="row" t-esc="emp_info.study_field" t-if="emp_info.study_field"/>
                                    <td scope="row" t-esc="emp_info.study_school" t-if="emp_info.study_school"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <br/>
                    <br/>
                    <div style="border-bottom: 2px solid black"/>
                    <br/>
                    <br/>
                    <div class="d-inline p-2 bg-secondary text-white mb-3">Documents
                        <span class="mr-5"/>
                    </div>
                    <br/>
                    <br/>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td scope="col">Document</td>
                                    <td scope="col">Number</td>
                                    <td scope="col">Place of issue</td>
                                    <td scope="col">Date</td>
                                    <td scope="col">Expiration</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-if="emp_info.visa_no">
                                    <td scope="row">VISA</td>
                                    <td scope="row" t-esc="emp_info.visa_no" />
                                    <td scope="row" t-esc="emp_info.permit_no"/>
                                    <td scope="row"></td>
                                    <td scope="row" t-esc="emp_info.visa_expire" />
                                </tr>
                                <tr t-if="emp_info.passport_id">
                                    <td scope="row">Passport</td>
                                    <td scope="row" t-esc="emp_info.passport_id"/>
                                    <td scope="row" t-esc="emp_info.passport_expiry_date"
                                        t-if="emp_info.passport_expiry_date"/>
                                    <td scope="row"></td>
                                    <td scope="row"></td>
                                </tr>
                                <tr t-if="emp_info.identification_id">
                                    <td scope="row">Identification</td>
                                    <td scope="row" t-esc="emp_info.identification_id"      />
                                     <td scope="row"></td>
                                    <td scope="row"></td>
                                    <td scope="row" t-esc="emp_info.id_expiry_date" />
                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="p-5"/>

                </div>

            </t>
        </t>
    </template>


    <!--    *************************************************************************************************************************-->
    <report id="emp_report_info"
            model="employee.report.department"
            string="Employee Information"
            report_type="qweb-html"
            name="hr_report_ksa.template_emp_report_info"
            menu="False"/>

    <template id="template_emp_report_info">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div>
                        <span>
                            <h6 class="text-center">
                                <h6 class="text-center">
                                    <strong class="container mr-5 p-2 border border-secondary">
                                        Social Insurance Statement According To The Administration
                                    </strong>
                                </h6>
                            </h6>
                        </span>
                    </div>
                    <div class="table-responsive mt-5 p-4">
                        <table class="table">
                            <thead>
                                <tr class="table-active">
                                    <th scope="col">Employee No</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Nationality</th>
                                    <th scope="col">Join Date</th>
                                    <th scope="col">Insurance Date</th>
                                    <th scope="col">Insurance Salary</th>
                                    <th scope="col">Insurance Place</th>
                                    <th scope="col">Deduct Employee</th>
                                    <th scope="col">Deduct Company</th>
                                    <!--                                    <th scope="col">Job Risk</th>-->
                                    <th scope="col">Deduct Total</th>
                                </tr>
                            </thead>
                            <tbody t-foreach="docs" t-as="doc">
                                <tr>
                                    <th t-esc="doc['registration_number']"/>
                                    <th t-esc="doc['name']"/>
                                    <th t-esc="doc['country_id']"/>
                                    <th t-esc="doc['joining_date']"/>
                                    <th t-esc="doc['insr_date']"/>
                                    <th t-esc="doc['insr_place']"/>
                                    <th t-esc="doc['insr_salary']"/>
                                    <th t-esc="doc['insurance_employee']"/>
                                    <th t-esc="doc['insurance_company']"/>
                                    <!--                                    <th t-esc="emp_info.id"/>-->
                                    <th t-esc="doc['total']"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="m-5" >
                        <strong>Department:
                            <span class="ml-2" t-esc="department_info.name" t-if="len(department_info) == 1"/>
                        </strong>
                        <br/>
                        <br/>
                        <strong>Total Department Employees:
                            <span class="ml-2" t-esc="department_info.total_employee" t-if="len(department_info) == 1"/>
                        </strong>
                        <br/>
                        <br/>
                        <strong>Total Employees:
                            <span class="ml-2" t-esc="emps_total" t-if="len(department_info) == 1"/>
                        </strong>
                    </div>
                    <span class="p-5"/>
                </div>
            </t>
        </t>
    </template>


                                            <span t-esc="emp_info['emp_name'].name"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="emp_info['emp_contract'].first_contract_date"/>
                                        </td>
                                        <!--                                    <th t-esc="emp_info['emp_contract'].first_contract_date"/>-->
                                        <td class="text-center">
                                            <span t-esc="(emp_info['emp_contract'].wage + emp_info['emp_contract'].hra + emp_info['emp_contract'].da + emp_info['emp_contract'].travel_allowance + emp_info['emp_contract'].fix_allowance + emp_info['emp_contract'].other_allowance + emp_info['emp_contract'].meal_allowance)"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="emp_info['net_service_months']"/>
                                        </td>
                                        <!--                                    <th t-esc="(emp_info['emp_contract'].wage + emp_info['emp_contract'].hra + emp_info['emp_contract'].da + emp_info['emp_contract'].travel_allowance + emp_info['emp_contract'].fix_allowance + emp_info['emp_contract'].other_allowance + emp_info['emp_contract'].meal_allowance)"/>-->
                                        <td class="text-center">
                                            <span t-esc="emp_info['net_service_years']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="emp_info['net_service_days']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="emp_info['emp_name'].contract_id.date_end if emp_info['emp_name'].contract_id.date_end else '-' "/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="round(emp_info['remain']) if emp_info['remain'] else '0'"/>
                                        </td>

                                        <td class="text-center">
                                            <span t-esc="round(emp_info['remain'] * ((emp_info['emp_contract'].wage + emp_info['emp_contract'].hra + emp_info['emp_contract'].da + emp_info['emp_contract'].travel_allowance + emp_info['emp_contract'].fix_allowance + emp_info['emp_contract'].other_allowance + emp_info['emp_contract'].meal_allowance)/30) )"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="emp_info['emp_contract'].ticket_per_year"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="emp_info['balance'] if emp_info['balance'] else '0'"/>
                                        </td>
<!--                                        <td class="text-center">-->
<!--                                            <span t-esc="round(emp_info['balance']) if emp_info['balance_taken'] else '0'"/>-->
<!--                                        </td>-->
                                        <td class="text-center">
                                            <span t-esc="emp_info['balance'] * emp_info['emp_contract'].ticket_price if emp_info['balance_taken'] else '0'"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="emp_info['emp_contract'].ticket_price"/>
                                        </td>


                                    </tr>
                                </t>
                            </tbody>
                        </table>
<!--                    </div>-->

<!--    Time off report-->


    <record id="leave_report_view" model="ir.ui.view">
        <field name="name">Employees Leave Report Wizard</field>
        <field name="model">report.leave.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                        <group>
                            <group>
                                <field name="date_from" invisible="1"/>
                                <field name="from_no" invisible="1"/>
                                <field name="department_id"/>
                                <field name="company"/>
                            </group>
                            <group>
                                <field name="date_to" invisible="1"/>
                                <field name="to_no" invisible="1"/>
                                <field name="leave_type" />
<!--                                <field name="date_to"/>-->
                                 <field name="emp_rel" />
                            </group>
                        </group>
                    </sheet>

                <footer>
	                <button name="get_report" string="Print" type="object" default_focus="1" class="oe_highlight" />
	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
            </form>
        </field>
    </record>


    <record id="action_employees_leave_report_wizard" model="ir.actions.act_window">
        <field name="name">Employees Leave Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.leave.wizard</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="leave_report_view"/>
        <field name="target">new</field>
    </record>




    <menuitem id="employees_leave_report_report" name="Time Of Report" action="action_employees_leave_report_wizard"
              parent="hr.hr_menu_hr_reports" sequence="10"/>


</odoo>

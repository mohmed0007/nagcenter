<odoo>


    <!--   Employee Recruit and Resignation Report-->
     <record id="recruit_resignation_report_view" model="ir.ui.view">
        <field name="name">Recruit Resignation Wizard</field>
        <field name="model">recruit.resignation.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                        <group>

                            <group>
                                <field name="date_from"/>
                                <field name="from_no"/>
                                <field name="company"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="to_no"/>
                                <field name="department_id"/>
                            </group>
                        </group>
                    </sheet>

            <footer>
	                <button name="get_report1" string="Print" type="object" default_focus="1" class="oe_highlight" />
	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
            </form>
        </field>
    </record>


    <record id="action_recruit_resignation_report_wizard" model="ir.actions.act_window">
        <field name="name">Recruit and Resignation Report</field>
        <field name="res_model">recruit.resignation.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="recruit_resignation_report_view"/>
        <field name="target">new</field>
    </record>



    <record id="emp_leaves_and_tics" model="ir.ui.view">
        <field name="name">Employee Leaves and Tickets</field>
        <field name="model">employee.leave.tic</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="department"
                                   options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"/>
                            <field name="from_no" required="0"/>
                        </group>
                        <group>
                            <field name="employee" domain="[('department_id', '=', department)]"
                                   options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"
                                   widget="many2many_tags"/>
                            <field name="to_no" required="0"/>
                        </group>
                        <group>
                            <field required="1"
                                   name="leave_type"
                                   options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="get_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="emp_leaves_and_tics_action" model="ir.actions.act_window">
        <field name="name">Employee Leaves and Tickets</field>
        <field name="res_model">employee.leave.tic</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

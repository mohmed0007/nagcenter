<odoo>
    <record id="emp_details_form_wiz" model="ir.ui.view">
        <field name="name">Employee Details Report Wizard</field>
        <field name="model">employee.report.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="department"
                                   options="{'no_create_edit': True, 'no_create':True, 'no_open':True}" required="1"/>
<!--                            <field name="from_no" required="0"/>-->
                            <field name="company" />
                        </group>


                        <group>
                            <field name="employee" domain="[('department_id', '=', department)]"
                                   options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"
                                   widget="many2many_tags" required="1"/>
<!--                            <field name="to_no" required="0"/>-->
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="get_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_emp_details_form_wiz" model="ir.actions.act_window">
        <field name="name">Employee Details Report</field>
        <field name="res_model">employee.report.details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="emp_details_info"
              name="Employees Detail"
              action="action_emp_details_form_wiz"
              parent="hr.hr_menu_hr_reports"
              sequence="10"/>

    <!--********************************************************************************************************************************************************-->
    <record id="emp_details_department_2" model="ir.ui.view">
        <field name="name">Employee Report Wizard</field>
        <field name="model">employee.report.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="department"
                                   options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"/>
                            <field name="from_no" required="0"/>
                        </group>


                        <group>
                            <field name="employee" domain="[('department_id', '=', department)]"
                                   options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"
                                   widget="many2many_tags"/>
                            <field name="to_no" required="0"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="get_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_emp_report_department_1" model="ir.actions.act_window">
        <field name="name">Employee Report</field>
        <field name="res_model">employee.report.department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

<?xml version="1.0"?>
<odoo>

    <!-- Partner View -->
    <record id="view_partner_veterinary_form" model="ir.ui.view">
        <field name="name">partner.veterinary.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_partner_procedures" class="oe_stat_button" icon="fa-medkit" type="object" groups="acs_hms_veterinary.group_hms_veterinary">
                    <field string="Veterinary Procedures" name="partner_procedure_count" widget="statinfo"/>
                </button>
            </div>

            <xpath expr="//page[1]" position="before">
                <page string="Pets" name="pet_info" autofocus="autofocus">
                    <field name="pet_ids" mode="kanban" context="{'form_view_ref' : 'acs_hms_veterinary.view_acs_patient_form_veterinary'}"/>
                </page>
            </xpath>
        </field>
    </record>


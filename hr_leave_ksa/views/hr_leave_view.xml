<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="edit_holiday_status_form_inherit">
        <field name="name">hr.leave.type.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='request_unit']" position="before">
                <field name="is_annual_leave"/>
            </xpath>
        </field>
    </record>

    <record id="hr_leave_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_refuse']" position="after">
                <button string="Create or View Ticket Request" name="create_ticket_request" type="object" attrs="{'invisible': [('ticket_required', '=', False)]}"/>
                <button string="Create or View Visa Request" name="create_visa_request" type="object" attrs="{'invisible': [('exit_entry_required', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="ticket_required" attrs="{'readonly': [('state','=','refuse')]}"/>
                <field name="exit_entry_required" attrs="{'readonly': [('state','=','refuse')]}"/>
                <field name="flight_booking_id" invisible="1"/>
                <field name="hr_visa_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="hr_leave_view_form_manager_inherit" model="ir.ui.view">
        <field name="name">hr.leave.view.form.manager.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
        <field name="arch" type="xml">
            <field name="ticket_required" position="replace"/>
            <field name="exit_entry_required" position="replace"/>
            <xpath expr="//field[@name='holiday_type']" position="before">
                <field name="ticket_required" attrs="{'readonly': [('state','=','refuse')]}"/>
                <field name="exit_entry_required" attrs="{'readonly': [('state','=','refuse')]}"/>
            </xpath>
        </field>
    </record>

    <record id="hr_leave_allocation_view_form_inherit1" model="ir.ui.view">
        <field name="name">hr.leave.allocation.view.form.inherit1</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager"/>
        <field name="priority">80</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_validate']" position="after">
                <button string="Generate Leave Encashment" name="create_encashment_leave" attrs="{'invisible': [('state', '!=', 'validate'), ('is_annual_leave', '=', False)]}" type="object"/>
            </xpath>
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="is_annual_leave" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>

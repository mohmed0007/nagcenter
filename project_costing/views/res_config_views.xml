<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.project</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50"/>
            <field name="inherit_id" ref="project.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='analytic']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div>
                                        <span class="o_form_label">Shared warehouse for all projects</span>
                                    </div>
                                    <div class="row mt8">
                                        <label for="project_warehouse_id" class="col-lg-4 o_light_label" string="Projects Warehouse"/>
                                        <field name="project_warehouse_id"/>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="create_location"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="create_location" string="Create Location From Project"/>
                            <div class="text-muted">
                                Enable location creation from inside project
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>


</odoo>


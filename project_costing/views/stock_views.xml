<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="stock_picking_view_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="from_project" readonly="1" force_save="1"/>
                    <field name="project_id" attrs="{'invisible': [('from_project','=',False)], 
                    'required': [('from_project','=',True),('state','=','draft')]}" readonly="1" force_save="1"/>
                </field>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                    <field name="from_project" readonly="1" force_save="1"/>
                    <field name="project_budget_line" attrs="{'column_invisible': [('parent.from_project', '=', False)], 
                    'required': [('parent.from_project','=',True),('parent.state','=','draft')]}" domain="[('calc_actual','=','delivery'),('state','=','validate')]"/>
                </xpath>
                <field name="location_id" position="attributes">
                    <attribute name="attrs">{'readonly':['|',('state', '!=', 'draft'),('project_id','!=', False)],'invisible': [('picking_type_code', '=', 'incoming')]}</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
                <field name="picking_type_id" position="attributes">
                    <attribute name="attrs">{'invisible': [('hide_picking_type', '=', True)], 'readonly': ['|',('state', '!=', 'draft'),('project_id','!=', False)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
            </field>
        </record>

        <record id="view_location_form" model="ir.ui.view">
            <field name="name">stock.location.form</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form" />
            <field name="arch" type="xml">
                <field name="usage" position="after">
                    <field name="project_id" readonly="1" force_save="1"/>
                </field>
                <field name="location_id" position="attributes">
                    <attribute name="attrs">{'readonly':[('project_id','!=',False)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>
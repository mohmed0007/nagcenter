<odoo>
    <record model="report.paperformat" id="paperformat_accounting_commission_report">
        <field name="name">paperformat.accounting.recap.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report id="recap_report_commission"
            model="account.commission.report.wizard"
            string="Accounting Recap Report"
            report_type="qweb-html"
            name="commission_report.accounting_recap_repor_commission_view"
            paperformat="paperformat_accounting_commission_report"
            menu="False"/>



    <template id="accounting_recap_repor_commission_view">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="text-center" >
                       <h6>
                           <span style="font-size: 14px;"><strong>Commission  Report for </strong>:  <t t-esc="representative_name"/>

                            </span>
                       </h6>
                       <br/>
                         <h6>
                           <span style="font-size: 14px;"><strong>Duration</strong>:
                             From :   <t t-esc="date_start"/> To :  <t t-esc="date_end"/>
                            </span>
                       </h6>
                       <br/>
                    </div>

                     <table class="table table-condensed table-bordered"
                           style="width: 100% ! important;font-size:10px ! important;">
                        <thead>

                            <tr>
                                <th class="text-center" style="width: 5%">No</th>
                                <th class="text-center" style="width: 10%">Invoice Reference</th>
                                <th class="text-center" style="width: 10%">Invoice Date</th>
                                <th class="text-center" style="width: 10%">Customer</th>
                                <th class="text-center" style="width: 10%">Representative</th>
                                <th class="text-center" style="width: 10%">Total Due</th>
                                <th class="text-center" style="width: 5%">Total Remain</th>
                                <th class="text-center" style="width: 5%">Payment amount</th>
                                <th class="text-center" style="width: 5%">Payment Ref</th>

                            </tr>


                        </thead>
                        <tbody>
                            <t t-set="No" t-value="1"/>

                            <t t-foreach="docs" t-as="reco">
                                <tr>
                                    <td class="text-center">
                                        <span t-esc="No"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="reco['name']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="reco['invoice_date']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="reco['partner_id']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="reco['representative_id']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="reco['total']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="reco['amount_residual']"/>
                                    </td>


                                     <td class="text-center">
                                        <span t-esc="round(reco['amount'])"/>
                                    </td>

                                    <td class="text-center">
                                        <span t-esc="reco['ref']"/>
                                    </td>


                                </tr>

                                <t t-set="No" t-value="No + 1 "/>
                            </t>
                            <tr>
                                <td colspan="5" class="text-left">
                                    <strong>Total</strong>
                                </td>
                                <td class="text-center">
                                    <strong><span t-esc="total_"></span></strong>
                                </td>
                                <td class="text-center">
                                   <strong><span t-esc="total_amount_residual"></span></strong>
                                </td>
                                <td class="text-center">
                                  <strong><span t-esc="round(total_amount)"></span></strong>
                                </td>
                                <td colspan="1">

                                </td>
                            </tr>

                        </tbody>
                    </table>
                   <br/>
                    <br/>
                    <table style="width:100%;margin:0px auto;border:0px !important;text-align: center; margin-top:40px !important;"
                           class="bg-light">
                        <thead>
                            <tr>
                                <th>Manager</th>
                                <th>Accountant</th>
                                <th>Representative</th>
                            </tr>
                        </thead>
                    </table>
                </div>




                    <div class="footer">
                        <div class="row text-center" style="border-top: 1px solid black;">
                            <div class="col col-3 offset-9 text-right">
                                <ul class="list-inline mt-2">
                                    <li class="list-inline-item">Page:</li>
                                    <li class="list-inline-item">
                                        <span class="page"/>
                                    </li>
                                    <li class="list-inline-item">/</li>
                                    <li class="list-inline-item">
                                        <span class="topage"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

            </t>

        </t>
    </template>
</odoo>
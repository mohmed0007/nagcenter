<odoo>
    <record id="account_commission_report_wizard" model="ir.ui.view">
        <field name="name">Account Commission Report Wizard</field>
        <field name="model">account.commission.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <!-- Form design for your fields -->
                <group col="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="company_id"/>
<!--                    <field name="account_id"/>-->
                    <field name="representative_id"/>
                    <field name="partner_ids" widget="many2many_tags" required="1" invisible="1"/>
                    <field name="enable_filter" invisible="1"/>
                </group>
                 <notebook tabpos="up" colspan="4">
                    <page string="Comparison" name="comparison" attrs="{'invisible': [('enable_filter','=',False)]}">
                        <group>
                            <field name="label_filter" attrs="{'required': [('enable_filter', '=', True)]}"/>
                            <field name="filter_cmp"/>
                        </group>
                        <group string="Dates" attrs="{'invisible':[('filter_cmp', '!=', 'filter_date')]}">
                            <field name="date_from_cmp" attrs="{'required':[('filter_cmp', '=', 'filter_date')]}"/>
                            <field name="date_to_cmp" attrs="{'required':[('filter_cmp', '=', 'filter_date')]}"/>
                        </group>
                    </page>
                </notebook>

            <footer>
	                <button name="get_report" string="Print PDF" type="object" default_focus="1" class="oe_highlight" />
<!--                    <button name="get_report_xls" string="Print XLSX" type="object" default_focus="1" class="oe_highlight" />-->

	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
            </form>
        </field>
    </record>


    <record id="action_account_commission_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Account Report</field>
        <field name="res_model">account.commission.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_commission_report_wizard"/>
        <field name="target">new</field>
    </record>
    <menuitem id="account_report_report_commission" name="Commission Report" action="action_account_commission_report_wizard"
              parent="account.account_reports_legal_statements_menu" sequence="10"/>

</odoo>
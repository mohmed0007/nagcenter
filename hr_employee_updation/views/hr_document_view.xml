<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="view_hr_document_type_tree" model="ir.ui.view">
        <field name="name">hr.document.type.tree</field>
        <field name="model">hr.document.type</field>
        <field name="arch" type="xml">
            <tree string="Document Type" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="notification_days"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_document_type_form" model="ir.ui.view">
        <field name="name">hr.document.type.form</field>
        <field name="model">hr.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="notification_days"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hr_document_type">
        <field name="name">Document Type</field>
        <field name="res_model">hr.document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to define a new Document Type.</p>
        </field>
    </record>

    <record id="hr_document_view_form" model="ir.ui.view">
        <field name="name">hr.doc.form</field>
        <field name="model">hr.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="document_submit" string="Submit" type="object" class="oe_highlight" states="draft,renew"/>
                    <button name="document_issue" string="Issue" type="object" class="oe_highlight" states="confirm" groups="hr.group_hr_manager"/>
                    <button name="document_refuse" string="Refuse" type="object" states="confirm"/>
                    <button name="set_draft" string="Set to Draft" type="object" states="refuse"/>
                    <button name="document_renew" string="Renew" type="object" class="oe_highlight" states="expiry"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,issue" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly':[('state', 'in', ['issue'])]}" groups="hr.group_hr_user"/>
                            <field name="type_id" required="1" attrs="{'readonly':[('state', 'in', ['issue','expiry'])]}"/>
                            <field name="name" required="1" attrs="{'readonly':[('state', 'in', ['issue','expiry'])]}"/>
                        </group>
                        <group>
                            <field name="issue_date" attrs="{'readonly':[('state', 'in', ['issue'])]}"/>
                            <field name="expiry_date" attrs="{'readonly':[('state', 'in', ['issue','expiry'])]}"/>
                            <field name="company_id" groups="base.group_multi_company" attrs="{'readonly':[('state', 'in', ['issue','expiry'])]}"/>
                        </group>
                    </group>
                    <group string="Attachment">
                        <field name="attachment_ids" widget="many2many_binary" attrs="{'readonly':[('state', 'in', ['issue','expiry'])]}" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" attrs="{'readonly':[('state', 'in', ['issue','expiry'])]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_document_view_tree" model="ir.ui.view">
        <field name="name">hr.doc.tree</field>
        <field name="model">hr.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type_id" required="1" />
                <field name="name"/>
                <field name="issue_date" />
                <field name="expiry_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="hr_document_view_search" model="ir.ui.view">
        <field name="name">hr.doc.search</field>
        <field name="model">hr.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="name"/>
                <group>
                    <filter name="group_employee_id" string="Employee" context="{'group_by':'employee_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hr_document">
        <field name="name">Document</field>
        <field name="res_model">hr.document</field>
        <field name="view_mode">search,tree,form</field>
        <field name="context">{'search_default_group_state': 1, 'search_default_group_employee_id': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to define a new Document.</p>
        </field>
    </record>

    <menuitem id="menu_hr_document_type" action="action_hr_document_type" parent="hr.menu_human_resources_configuration" sequence="20" groups="hr.group_hr_manager"/>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="hr_doc_type1" model="hr.document.type">
            <field name="name">Iqama No</field>
            <field name="code">IID</field>
            <field name="notification_days">15</field>
        </record>
        <record id="hr_doc_type2" model="hr.document.type">
            <field name="name">National ID</field>
            <field name="code">NID</field>
        </record>
        <record id="hr_doc_type3" model="hr.document.type">
            <field name="name">Passport No</field>
            <field name="code">PNO</field>
            <field name="notification_days">45</field>
        </record>
        
        <record id="email_template_hr_document_notify" model="mail.template">
            <field name="name">Document Expiration Notification - Send by Email</field>
            <field name="email_from"><![CDATA[${'noreply@localhost'}]]></field>
            <field name="subject">${object.employee_id.name} Document Expiration</field>
            <field name="model_id" ref="hr_employee_updation.model_hr_document"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">
                    <p>Hello, <strong>${object.employee_id.name}</strong></p>
                    <p>This is to inform you that your document <strong>${object.type_id.name}</strong> will expire on <strong>${object.expiry_date}</strong>. You shall be notified in writing within the date or after this date should renew your <strong>${object.type_id.name}</strong> </p>
                    <p>For more information see below details,</p>
                    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
                       &nbsp;&nbsp;<strong>REFERENCES</strong><br />
                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Subject: <strong>${object.employee_id.name}'s ${object.type_id.name} Expiration</strong><br />
                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Employee: ${object.employee_id.name}<br />
                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Document: ${object.type_id.name}<br />
                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Duration: <strong> ${object.issue_date} - ${object.expiry_date} </strong><br />
                    </p>
                    <p> This Document will be expired on <strong> ${object.expiry_date} </strong>.</p>
                    <br/><br/>
                    Thanks,<br/>
                    Administrator.
                </div>
            ]]></field>
        </record>

        <record id="email_template_hr_document_expire" model="mail.template">
            <field name="name">Document - Send by Email</field>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="subject">Document Expire</field>
            <field name="model_id" ref="hr_employee_updation.model_hr_document"/>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.employee_id.user_id.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
            <p>Hello ${object.employee_id.name},</p><br/>
            <p style="color:red">Your Document <b>${object.type_id.name}</b> is <b>${object.name}</b> has been expired on ${object.expiry_date}.</p><br/>
            <p>Thank you,</p>
            <p>${user.name}</p>
            ]]></field>
        </record>

    </data>

    <record forcecreate="True" id="ir_cron_hr_document_scheduler_action" model="ir.cron">
        <field name="name">Scheduled Employee's Documents Expiration</field>
        <field name="model_id" ref="model_hr_document"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field eval="False" name="doall"/>
        <field name="state">code</field>
        <field name="code">model.run_scheduler()</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bt_emp_rule" model="ir.rule">
        <field name="name">Business Trip</field>
        <field name="model_id" ref="model_business_trip"/>
        <field name="domain_force">['|','|','|',('message_partner_ids', '=', user.partner_id.id),
            ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id),
            ('employee_id.coach_id.user_id', '=', user.id)]
        </field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record id="bt_manager_rule" model="ir.rule">
        <field name="name">Business Trip Manager</field>
        <field name="model_id" ref="model_business_trip"/>
        <field name="groups" eval="[(4,ref('hr.group_hr_user'))]"/>
        <field name="domain_force">['|', ('message_partner_ids', 'child_of', [user.partner_id.id]), '|',
            ('company_id','=',False),('company_id', 'in', company_ids)]
        </field>
    </record>

</odoo>


